<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body class="bg-slate-900">
    <section>
      <h1 class="text-blue-500 font-bold text-2xl text-center pt-5">
        Task Tracker
      </h1>
      <form
        class="flex flex-col px-10 py-5 mb-7 text-white"
        action="/create"
        method="post"
      >
        <input
          class="bg-slate-700 p-2 rounded-sm"
          type="text"
          placeholder="Title goes here"
          name="title"
        />
        <textarea
          class="mt-3 bg-slate-700 p-2 rounded-sm h-[8rem]"
          placeholder="Description goes here"
          name="desc"
        ></textarea>
        <button class="bg-blue-700 mt-3 py-1 rounded-sm" type="submit">
          Create Task
        </button>
      </form>
    </section>

    <section class="flex flex-wrap justify-evenly gap-2 text-gray-500">
      <% if(files.length > 0){%> <% files.forEach(function(val){%>
      <div
        class="border-2 bg-slate-700 rounded-lg w-[28%] h-[6rem] space-y-4 p-3"
      >
        <div class="flex justify-between">
            <p class="text-wrap text-xl text-white"><%= val %></p>
            <img class="h-4 self-center" src="https://cdn-icons-png.flaticon.com/128/6861/6861362.png" alt="">
        </div class="">
        <div class="flex justify-between">
          <a href="./files/<%= val %>" class="text-blue-600">Read more</a>
          <a class="text-orange-400" href="/edit/<%= val %>">Edit Title</a>
        </div>
      </div>
      <%}) %> <%}else{%>
      <h3 class="text-gray-500">No task yet</h3>
      <%}%>
    </section>

