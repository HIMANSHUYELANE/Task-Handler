<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body class="bg-slate-900">
        <section>
            <form class="flex flex-col p-10 text-white" action="/create" method="post">
                <input class=" bg-slate-700 p-2 rounded-sm" type="text" placeholder="Title goes here" name="title">
                <textarea class="mt-3 bg-slate-700 p-2 rounded-sm" placeholder="Description goes here" name="desc"></textarea>
                <button class="bg-blue-700 mt-3 py-1  rounded-sm" type="submit">Create Task</button>
            </form>        
            </section>

            <section class="flex justify-evenly text-gray-500">
            <% if(files.length > 0){%>
                <% files.forEach(function(val){%>
                    <div class="p-10 w-[25%]">
                        <p class="text-xl"><%= val %></p>
                        <div class="flex justify-between">
                            <a href="./files/<%= val %>" class="text-blue-600">Read more</a>
                            <a href="/edit/<%= val %>">Edit Title</a>
                        </div>
                    </div>
                    <%})
                    %>
                    <%}else{%>
                        <h3 class="text-gray-500">No task yet</h3>
                        <%}%>
                 </section>
            
           
               
